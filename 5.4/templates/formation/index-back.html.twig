{% extends 'baseBack.html.twig' %}

{% block title %}Formation index Admin{% endblock %}

{% block body %}
    <div class="tab">
    <h1>Formation index</h1>
        <a href="{{ path('app_formation_new') }}" class="button_creer"><span class="button_text">Creer formation<span></a>
    {% for formation in formations %}
        <div class="col-lg-12">
            <div class="card">

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table header-border table-hover verticle-middle">
                            <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nom formation</th>
                                <th scope="col">Niveau</th>
                                <th scope="col">ID formateur</th>
                                <th scope="col">Nom formateur</th>
                                <th scope="col">Modules Inclus</th>
                                <th scope="col">Actions</th>

                            </tr>
                            </thead>

                            <tbody>
                            <tr>
                                <th>{{ formation.id }}</th>
                                <th>{{ formation.NomFormation }}</th>
                                <th>{{ formation.NiveauFormation }}</th>
                                <th>{{ formation.Formateur.getId() }}</th>
                                <th>{{ formation.Formateur.getNomFormateur() }}</th>
                                <th>{% for module in formation.moduleFormations %}
                                       | {{ module.NomModule }} |
                                    {% endfor %}
                                </th>

                                <th>
                                <span><a href="{{ path('app_formation_edit', {'id': formation.id}) }}" class="mr-4" data-toggle="tooltip"
                                             data-placement="top" title="Edit"><i
                                                    class="fa fa-pencil color-muted"></i></a>
                                    {{ include('formation/_delete_form.html.twig') }}</th>
                                </span>

                                </th>

                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


    {% endfor %}

    </div>
    <style>
        .tab{

            width: 1150px;
            position: relative;
            margin-top: 200px;
            left: 300px;
        }
        .button_creer{
            border: #9c00ff;
            border-left-style: solid;
            background: #d2e6ff;
            border-radius: 5px;
            position: relative;

        }
        .button_text{
            color: #7a6666;
        }
        .button_text:hover{
            color: #000000;
        }

    </style>
{% endblock %}

