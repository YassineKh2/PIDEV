{% extends 'baseBack.html.twig' %}

{% block title %} Despense Session{% endblock %}
{% block body %}
    <div class="tab">
        <h1>Despense index</h1>
        <a href="{{ path('app_despense_new') }}" class="button_creer"><span class="button_text">Creer despense<span></a>
        {% for despense in despenses %}
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table header-border table-hover verticle-middle">
                                <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Libelle</th>
                                    <th scope="col">Montant</th>
                                    <th scope="col">Reduction</th>

                                    <th scope="col">Actions</th>


                                </tr>
                                </thead>






                                <tbody>
                                <tr>
                                    <th scope="col">{{ despense.id }}</th>
                                    <th scope="col">{{ despense.LibelleDespense }}</th>
                                    <th scope="col">{{ despense.MontantDespense }}</th>
                                    <th scope="col">{{ despense.ReductionDespense }}%</th>


                                    <th>
                                <span><a href="{{ path('app_despense_edit', {'id': despense.id}) }}" class="mr-4" data-toggle="tooltip"
                                         data-placement="top" title="Edit"><i
                                                class="fa fa-pencil color-muted"></i></a>
                                        {{ include('despense/_delete_form.html.twig') }}</th>
                                    </span>

                                    </th>

                                </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        {% endfor %}

    </div>
    <style>
        .tab{

            width: 1150px;
            position: relative;
            margin-top: 200px;
            left: 300px;
        }
        .button_creer{
            border: #9c00ff;
            border-left-style: solid;
            background: #d2e6ff;
            border-radius: 5px;
            position: relative;

        }
        .button_text{
            color: #7a6666;
        }
        .button_text:hover{
            color: #000000;
        }

    </style>
{% endblock %}

