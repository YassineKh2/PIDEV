{% extends 'baseBack.html.twig' %}

{% block title %}Formation index Admin{% endblock %}

{% block body %}
    <div class="tab">
        <h1>Formateur index</h1>
        <a href="{{ path('app_formateur_new') }}" class="button_creer"><span class="button_text">Creer formateur<span></a>
        {% for formateur in formateurs %}
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table header-border table-hover verticle-middle">
                                <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Nom </th>
                                    <th scope="col">Prenom</th>
                                    <th scope="col">Sexe</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Numero telephone</th>


                                </tr>
                                </thead>

                                <tbody>
                                <tr>
                                    <th>{{ formateur.id }}</th>
                                    <th>{{ formateur.NomFormateur }}</th>
                                    <th>{{ formateur.PrenomFormateur }}</th>
                                    <th>{%if formateur.SexeFormateur=="1" %}
                                    {{ "Masculin" }}
                                    {% else %}
                                        {{ "Feminin" }}
                                        {% endif %}
                                    </th>

                                    <th>{{ formateur.EmailFormateur }}</th>
                                    <th>{{ formateur.NumTelFormateur }}</th>


                                    <th>
                                <span><a href="{{ path('app_formateur_edit', {'id': formateur.id}) }}" class="mr-4" data-toggle="tooltip"
                                         data-placement="top" title="Edit"><i
                                                class="fa fa-pencil color-muted"></i></a>
                                        {{ include('formateur/_delete_form.html.twig') }}</th>
                                    </span>

                                    </th>

                                </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        {% endfor %}

    </div>
    <style>
        .tab{

            width: 1150px;
            position: relative;
            margin-top: 200px;
            left: 300px;
        }
        .button_creer{
            border: #9c00ff;
            border-left-style: solid;
            background: #d2e6ff;
            border-radius: 5px;
            position: relative;

        }
        .button_text{
            color: #7a6666;
        }
        .button_text:hover{
            color: #000000;
        }

    </style>
{% endblock %}

