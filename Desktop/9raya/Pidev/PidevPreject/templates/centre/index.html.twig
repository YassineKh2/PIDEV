{% extends 'baseBack.html.twig' %}

{% block title %}Centre index{% endblock %}

{% block body %}
    <style>
        .tab{

            width: 1000px;
            position: relative;
            margin-top: 200px;
            left: 300px;
        }
        button:hover{
            color: red;
        }
        .rounded-corners{
            border-radius: 10%;
        }


    </style>
    <div class="tab">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">LES CENTRES</h4>
                    <a href="{{ path('app_centre_new') }}">Creer</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-primary">
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">nom centre</th>
                                <th scope="col">capacite centre</th>
                                <th scope="col">nombre des blocs</th>
                                <th scope="col">action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for centre in centres %}
                                <tr>
                                    <td>{{ centre.id }}</td>
                                    <td>{{ centre.NomCentre }}</td>
                                    <td>{{ centre.CapaciteCentre }}</td>
                                    <td>{{ centre.NombreBlocCentre }}</td>
                                    <td>
                                        <form method="post" action="{{ path('app_centre_delete', {'id': centre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <button href="{{ path('app_centre_delete', {'id': centre.id}) }}" title="Supprimer" class="fa fa-trash-o color-danger border-0" >
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ centre.id) }}">
                                            </button>
                                        </form>
                                        <a href="{{ path('app_centre_edit', {'id': centre.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
