{% extends 'base.html.twig' %}

{% block title %}Liste des activités{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css">
{% endblock %}

{% block body %}
    <div class="formppp">
        <div class="formaaa">
            <div class="container mt-5">
                <div class="titre">
                    <h1 class="titre">Liste des activités</h1>
                    <style>
                        .titre {
                            font-size: 50px;
                            font-weight: bold;
                            text-align: center;
                            margin-bottom: 35px;
                            color: #4daea7;
                            margin-top: 110px;
                        }
                    </style>
                </div>
                <div class="row justify-content-center">
                    <div class="col-10">
                        <table id="activite-centres-table" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Jour</th>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Heure début</th>
                                <th>Heure fin</th>
                                <th>Nombre max de participants</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for activite_centre in activite_centres %}
                                <tr>
                                    <td>{{ activite_centre.id }}</td>
                                    <td>{{ activite_centre.JourActivite }}</td>
                                    <td>{{ activite_centre.NomActivite }}</td>
                                    <td>{{ activite_centre.ContenuActivite }}</td>
                                    <td>{{ activite_centre.HeureDebutActivite ? activite_centre.HeureDebutActivite|date('H:i:s') : '' }}</td>
                                    <td>{{ activite_centre.HeureFinActivite ? activite_centre.HeureFinActivite|date('H:i:s') : '' }}</td>
                                    <td>{{ activite_centre.NombreParticipantActiviteMax }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">Aucune activité trouvée.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#activite-centres-table').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/fr_fr.json"
                }
            });
        });
    </script>
    <style>
        .formppp {
            margin-top: 50px;
            position: relative;
            width: 100%;
            text-align: center;
        }
        .formaaa {
            display: inline-block;
            text-align: left;
        }
    </style>
{% endblock %}


