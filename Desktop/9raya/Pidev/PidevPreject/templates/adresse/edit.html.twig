{% extends 'baseBack.html.twig' %}

{% block title %}Edit Adresse{% endblock %}

{% block body %}
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
    <div class="content-body" style="min-height: 876px;">
        <div class="container-fluid">

            <div class="formadresse">
                <div class="row">
                    <div class="col-xl-12 col-xxl-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Modifier une adresse</h4>
                            </div>
                            <div class="card-body">
                                <form action="#" id="step-form-horizontal" class="step-form-horizontal">
                                    <div>
                                        <section>
                                            <div class="row">
                                                <div class="col-lg-12 mb-4">
                                                    <div class="form-group">
                                                        <label class="text-label">nom rue</label>
                                                        <div class="input-group">
                                                            {{ form_widget(form.NomRue, { 'attr': {'class': 'form-control' } })}}
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-12 mb-4">
                                                    <div class="form-group">
                                                        <label class="text-label">Numero Rue</label>
                                                        <div class="input-group">
                                                            {{ form_widget(form.NumRue, { 'attr': {'class': 'form-control' } })}}
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-12 mb-4">
                                                    <div class="form-group">
                                                        <label class="text-label">Code Postal</label>
                                                        <div class="input-group">
                                                            {{ form_widget(form.CodePostal, { 'attr': {'class': 'form-control' } })}}
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-12 mb-4">
                                                    <div class="form-group">
                                                        <label class="text-label">Gouvernorat</label>
                                                        <div class="input-group">
                                                            {{ form_widget(form.Gouvernorat, { 'attr': {'class': 'form-control' } })}}
                                                        </div>
                                                        <li class="text-danger">{{ form_errors(form.Gouvernorat) }}</li>
                                                    </div>
                                                </div>

                                            </div>
                                            <button class="btn btn-primary mb-1">{{ button_label|default('Modifier') }}</button>
                                        </section>
                                        {{ form_end(form) }}
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <a class="btn btn-outline-secondary mb-2" href="{{ path('app_adresse_index') }}">Annuler</a>
            </div>
        </div>
    </div>
    <style>
        .formadresse {
            margin-top: 150px;
            position: relative;
            width: 1000px;
            left: 200px;
            /*right: 100px;*/
        }
    </style>



