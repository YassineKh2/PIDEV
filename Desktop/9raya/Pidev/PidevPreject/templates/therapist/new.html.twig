{% extends 'base.html.twig' %}

{% block title %}New Therapist{% endblock %}

{% block body %}
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}


<div class="formArticle">
    <div class="row">
        <div class="col-xl-12 col-xxl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Ajouter un therapist</h4>
                </div>
                <div class="card-body">
                    <form action="#" id="step-form-horizontal" class="step-form-horizontal">
                        <div>
                            <section>
                                <div class="row">
                                    <div class="col-lg-12 mb-4">
                                        <div class="form-group">
                                            <label class="text-label">Num Telephone Therapist</label>
                                            <div class="input-group">
                                                {{ form_widget(form.NumTelTherapist, { 'attr': {'class': 'form-control' } })}}
                                            </div>
                                            <li class="text-danger">{{ form_errors(form.NumTelTherapist, { 'attr': {'class': 'form-control' } })}}</li>
                                        </div>
                                    </div>

                                    <div class="col-lg-12 mb-4">
                                        <div class="form-group">
                                            <label class="text-label">ImageTherapist</label>
                                            <div class="input-group">
                                                {{ form_widget(form.ImageTherapist, { 'attr': {'class': 'form-control' } })}}
                                            </div>
                                            <li class="text-danger">{{ form_errors(form.ImageTherapist, { 'attr': {'class': 'form-control' } })}}</li>
                                        </div>
                                    </div>

                                    <div class="col-lg-12 mb-4">
                                        <div class="form-group">
                                            <label class="text-label">ImageCvTherapist</label>
                                            <div class="input-group">
                                                {{ form_widget(form.ImageCvTherapist, { 'attr': {'class': 'form-control' } })}}
                                            </div>
                                            <li class="text-danger">{{ form_errors(form.ImageCvTherapist) }}</li>
                                        </div>
                                    </div>




                                    <button  class="btn">{{ button_label|default('suivant') }}</button>
                            </section>
                            {{ form_end(form) }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>

<style>
    .formArticle {
        margin-top: 150px;
        position: relative;
        width: 800px;
        left: 500px;
    }
    </style>
{% endblock %}
